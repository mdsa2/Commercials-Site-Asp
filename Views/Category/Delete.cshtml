@model Category
 
<form method="post">
    <div class="border p-3 mt-4">

        <div class="row pb-2">
            <h2 class="text-primary">Delete Category</h2>
            <hr/>

        </div>
        <div class="mb-3">
            <label asp-for="Name" class="p0 row p-0">Category Name</label>
            <input asp-for="Name" disabled type="text" class="form-control" />
            
        </div>
        <div class="mb-3">
            <label asp-for="MyOrder" class="p0 row p-0">Order Number</label>
            <input asp-for ="MyOrder" disabled type="text" class="form-control" />
      
        </div>
        <div class="row">
            <div class="col-6">
                <button type="submit" class="btn btn-danger form-control" style="width:150px; border: 2px">
                    Delete
                </button>
            </div>
            <div class="col-6">
                <a asp-controller="Category" asp-action="Index" class="btn btn-secondary form-control" style="width:150px; border: 2px solid #000; border-radius: 5px; padding: 10px 0; font-size: 16px;">
                    Back to List
                </a>
            </div>
        </div>

</form>