@model ProductCategoryViewModel
<div class="row pb-3">
    @if (Model.Products != null)
    {
        @foreach (var product in Model.Products)
        {
            <div class="col-lg-3">
                <div class="p-2">
                    <div class="col-12 p-1">
                        <div class="card border-0 p-3 shadow border-top border-5 rounded">
                            <img src="@product.ImagePath" class="card-img-top rounded" alt="Product image" />
                            <div class="card-body pb-0">
                                <div class="pl-1">
                                    <p class="card-title h5 text-dark opacity-75 text-uppercase text-center">
                                        @product.Description
                                    </p>
                                    <p class="card-title h5 text-warning text-center">
                                        by <b>@product.Price</b>
                                    </p>
                                </div>
                                <div class="pl-1">
                                    <p class="text-dark text-opacity-75 text-center">
                                        List Price <span>@product.ListPrice.ToString("c")</span>
                                    </p>
                                </div>
                                <div class="pl-1">
                                    <p class="text-dark text-opacity-75 text-center">
                                        As low as <span>@product.Price50.ToString("c")</span>
                                    </p>
                                </div>
                            </div>
                            <div>

                                <a asp-controller="Home" asp-action="Detials" asp-route-id="@product.Id" asp-route-image="@product.ImagePath" class="btn btn-primary bg-gradient p-2 form-control">Buy Now</a>
                            </div>
                        </div>
                    </div>
                </div>s
            </div>
        }
    }
    else
    {
        <p>No products available.</p>
    }
</div>