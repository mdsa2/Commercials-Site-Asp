@model  Product

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Details</title>
    <!-- Bootstrap CSS -->
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .navbar {
            background-color: #1a1a1a; /* Dark background for the site header */
        }

        .card-header {
            background-color: #1a1a1a; /* Same dark background for the card header */
        }

            .card-header h3, .card-header p {
                color: #fff; /* White text for contrast */
            }

        .btn-back {
            margin-bottom: 20px; /* Spacing for the back button */
        }

        .btn-count {
            background-color: #34495e; /* Darker background for the count button */
            color: #fff;
        }

            .btn-count:hover {
                background-color: #2c3e50;
            }

        .btn-add-to-cart {
            background-color: #2c3e50;
            color: #fff;
        }

            .btn-add-to-cart[disabled] {
                background-color: #95a5a6; /* Different color for disabled button */
            }
    </style>
</head>
 
        {
<body>
    @{
      
        var imagePath = ViewData["ImagePath"] as string;
    
    }
    <div class="container mt-5">
        <form method="post" enctype="multipart/form-data">
            <div class="card shadow border-0">
                <div class="card-header text-center py-4">
                    <h3 class="text-uppercase">@Model.Name</h3>
                    <p class="fw-semibold mb-0">by @Model.Author</p>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-12 text-center">
                            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary bg-gradient fw-semibold btn-sm text-uppercase btn-back">
                                <small>Back to Home</small>
                            </a>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12 col-lg-4  mb-3">
                            <img src="https://localhost:7025/@imagePath" class="card-img-top rounded" alt="Product Image">
                        </div>
                        <div class="col-12 col-lg-8">
                            <div class="d-flex flex-column align-items-start">
                                <span class="badge bg-secondary mb-2"></span>
                                <h6 class="text-dark text-opacity-50"></h6>
                                <h6 class="text-dark text-opacity-50">
                                    List Price:
                                    <span class="text-decoration-line-through">@Model.ListPrice.ToString("c")</span>
                                </h6>
                                <div class="table-responsive">
                                    <table class="table table-borderless">
                                        <thead>
                                            <tr>
                                                <th scope="col">Quantity</th>
                                                <th scope="col">1-50</th>
                                                <th scope="col">51-100</th>
                                           
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td>Price</td>
                                                <td>@Model.Price.ToString("c")</td>
                                                <td>@Model.Price50.ToString("c")</td>
                                                
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                                <p class="text-secondary">@Model.Description</p>
                                <div class="input-group mb-3">
                                    <span class="input-group-text btn-count" id="inputGroup-sizing-default">Count</span>
                                    <input type="number" value="1" class="form-control text-end" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" />
                                </div>
                                <button type="submit" disabled class="btn btn-add-to-cart w-100 py-2 text-uppercase fw-semibold">
                                    Add to cart (Coming soon...)
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>

    <!-- Bootstrap JS Bundle with Popper -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>

</html>
